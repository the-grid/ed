    "chai": "^3.5.0",
    "copy-webpack-plugin": "^1.1.1",
    "eslint": "^1.10.3",
    "eslint-config-standard": "^4.4.0",
    "eslint-loader": "^1.2.1",
    "eslint-plugin-standard": "^1.3.1",
    "html-flatten": "^0.2.0",
    "json-loader": "^0.5.4",
    "mocha": "^2.4.5",
    "mocha-loader": "^0.7.1",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.12",
    "webpack-dev-server": "^1.14.1"
