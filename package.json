{
  "name": "@the-grid/ed",
  "author": "Forrest Oliphant, The Grid",
  "license": "MIT",
  "version": "1.0.2",
  "description": "the grid api with prosemirror",
  "main": "dist/ed.js",
  "scripts": {
    "start": "export DEV=true; webpack-dev-server --inline --host 0.0.0.0",
    "babel": "mkdir -p dist && babel src --out-dir dist",
    "copycss": "(cd src && rsync -R -v **/*.css ../dist)",
    "build": "npm run clean; webpack; npm run babel; npm run copycss",
    "builddemo": "npm run clean; export DEMO=true; webpack",
    "clean": "rm -rf dist",
    "test": "npm run lint && npm run karma",
    "lint": "eslint src demo test",
    "lintfix": "eslint src demo test --fix",
    "karma": "karma start",
    "preversion": "npm test",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-grid/ed.git"
  },
  "bugs": {
    "url": "https://github.com/the-grid/ed/issues"
  },
  "homepage": "https://github.com/the-grid/ed#readme",
  "dependencies": {
    "@the-grid/ced": "^0.1.2",
    "@the-grid/ed-location": "^2.0.0",
    "@the-grid/ed-userhtml": "^0.2.1",
    "he": "^1.1.0",
    "imgflo-url": "^1.1.0",
    "lodash": "^4.14.1",
    "prosemirror": "^0.10.1",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-tap-event-plugin": "^1.0.0",
    "rebass": "^0.3.0",
    "uuid": "^2.0.2"
  },
  "widgets": {
    "@the-grid/ced": {
      "include": [
        "/editor/index.html",
        "/lib/mount.js",
        "/lib/mount.js.map"
      ]
    },
    "@the-grid/ed-location": {
      "include": [
        "/edit.html",
        "/ed-location.js"
      ]
    },
    "@the-grid/ed-userhtml": {
      "include": [
        "/edit.html",
        "/dist/edit.js"
      ]
    }
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "bob-ross-lipsum": "^1.1.1",
    "chai": "^3.5.0",
    "copy-webpack-plugin": "^3.0.1",
    "eslint": "^3.1.1",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-promise": "^2.0.0",
    "eslint-plugin-react": "^5.2.2",
    "eslint-plugin-standard": "^2.0.0",
    "estraverse": "^4.2.0",
    "estraverse-fb": "^1.3.1",
    "gremlins.js": "marmelab/gremlins.js",
    "html-flatten": "^0.3.5",
    "json-loader": "^0.5.4",
    "karma": "^1.1.2",
    "karma-browserstack-launcher": "^1.0.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-cli": "^1.0.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.5.3",
    "mocha-loader": "^0.7.1",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
