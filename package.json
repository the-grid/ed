  "version": "0.0.40",
  "description": "the grid api with prosemirror",
  "main": "dist/ed.js",
  "scripts": {
    "start": "export DEV=true; webpack-dev-server --inline",
    "build": "npm run clean; webpack",
    "builddemo": "npm run clean; export DEMO=true; webpack",
    "clean": "rm -rf dist",
    "test": "npm run lint && npm run mocha",
    "lint": "eslint src demo test",
    "lintfix": "eslint src demo test --fix",
    "mocha": "mocha --compilers js:babel-core/register",
    "preversion": "npm test",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-grid/ed.git"
  },
  "bugs": {
    "url": "https://github.com/the-grid/ed/issues"
  },
  "homepage": "https://github.com/the-grid/ed#readme",
  "dependencies": {
    "@the-grid/ced": "^0.1.0",
    "bean": "^1.0.15",
    "he": "^0.5.0",
    "imgflo-url": "^1.1.0",
    "lodash.clone": "^4.1.0",
    "lodash.clonedeep": "^4.1.0",
    "lodash.debounce": "^4.0.1",
    "material-ui": "^0.14.4",
    "prosemirror": "^0.3.0",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-tap-event-plugin": "^0.2.2",
    "uuid": "^2.0.1"
  },
  "widgets": {
    "@the-grid/ced": {
      "include": [
        "/editor/index.html",
        "/lib/mount.*"
      ]
    }
